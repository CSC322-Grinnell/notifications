%h1 User Accounts
- if admin?
  %table#users
    %thead
      %tr
        %th Name
        %th Email
        %th Classes
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= user.name
          %td= user.email
          %td
            - user.classrooms.each do |room|
              = room.name 
              %br
          %td.links= link_to "Edit", edit_user_path(user)
          %td.rem= link_to "Remove", user, method: :delete, data: { confirm: "Are you sure?" }

.new
  = link_to "New User", new_user_path