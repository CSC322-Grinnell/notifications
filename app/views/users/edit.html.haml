%h1 Edit User

= form_tag user_path(@user), :method => :put do

  = label :user, :name, 'Name'
  = text_field :user, 'name'
  %br/
  = label :user, :email, 'Email'
  = text_field :user, 'email'
  = label :user, :password, 'Password'
  = password_field :user, 'password'
  = label :user, :password_confirmation, 'Password Confirmation'
  =password_field :user, 'password Confirmation'
  = label :user, :admin, 'Admin'
  = check_box :user, :admin, {}, "true", "false"
  %br/
  = submit_tag 'Update User Info'