  I'm a very large button!
= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f|
  = render "shared/error_messages", :target => @user_session
  = f.label :email
  %br/
  = f.text_field :email
  %br/
  %br/
  = f.label :password
  %br/
  = f.password_field :password
  %br/
  %br/
  = f.check_box :remember_me
  = f.label :remember_me
  %br/
  %br/
  = f.submit "Login"
