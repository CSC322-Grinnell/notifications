%p
  %b Contact name:
  = @contact.Name
%p
  %b Phone number:
  = @contact.Phone_Number
%p
  %b Email:
  = @contact.Email
%p
  %b Can text:
  = @contact.can_text
%p
  %b Language:
  = @contact.language
%p
  %b Associated students:
  = " | "
  - @contact.students.each do |student|
    = student.Student_Name + " | "

= link_to 'Send Text', text_index_path(:Name => @contact.Name)
\|
- if admin?
  = link_to 'Edit', edit_contact_path(@contact)
  \|
= link_to 'Back to Contacts', contacts_path
\|
- if admin?
  = link_to 'Delete', contact_path(@contact), :method => :delete, :data => { :confirm => 'Are you really sure?' }

