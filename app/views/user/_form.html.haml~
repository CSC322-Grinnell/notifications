= form_for(@parents) do |f|
  - if @parents.errors.any?
    #error_explanation
      %h2
        = pluralize(@parents.errors.count, "error")
        prohibited this food_item from being saved:
      %ul
        - @food_item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.number_field :phoneNumber
  .field
    = f.label :childName
    %br/
    = f.label :class
  .actions
    = f.submit
